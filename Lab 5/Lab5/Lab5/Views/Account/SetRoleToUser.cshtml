@model Lab5.Models.SetRoleModel
@{
    ViewBag.Title = "SetRoleToUser";
}

<h2>Set role to user with this email:</h2>

@using(Html.BeginForm("SetRoleToUser", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(a => a.Email)
        @Html.TextBoxFor(a => a.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.DropDownListFor(b => b.SelectedRole, new SelectList(Model.Roles), new { @class = "form-control"})
    </div>
    <div>
        <button type="submit" class="btn btn-default"> Save </button>
    </div>
}

